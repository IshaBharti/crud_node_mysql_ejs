<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <table class="table table-bordered table-border text-center shadow">
            <tr>
                <th>id</th>
                <th>name</th>
                <th>email</th>
                <th>password</th>
                <th>User Delete</th>
                <th>User edit</th>
            </tr>
            
            <!-- In datas data will store from data it will iterate -->
            <% datas.forEach(function(data){ %>
                <tr>
                    <td> <%= data.personid %></td>

                    <td> <%= data.name %></td>
                    <td> <%= data.email %></td>
                    <td> <%= data.password %></td>
                    <td><a href="/delete/<%= data.personid%>" class="btn btn-danger"">Delete</a></td>
                    <td><a href="/edit/<%= data.personid%>" class="btn btn-success"">Edit</a></td>


                </tr>
                <% }) %>
        </table>
    </div>    
</body>
</html>